<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TakeAttendance"
    android:padding="20dp"
    android:background="@color/colorYellow">

    <TextView
        android:id="@+id/select_branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select branch"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="94dp"
        />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/select_branch"/>

    <TextView
        android:id="@+id/select_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Class"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_below="@id/spinner1"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="94dp"
        />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/select_year"/>

    <TextView
        android:id="@+id/select_div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Div"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_below="@id/spinner2"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="94dp"
        />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/select_div"/>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/spinner3"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_button"/>
</RelativeLayout>